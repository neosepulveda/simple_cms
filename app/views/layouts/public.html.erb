<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS<%= " | #{@page_title}" if @page_title%></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>    
  </head>
  <body>
    <div id="header">
      <h1>Simple CMS</h1>
    </div>
    <div id="main">        
      <div id="navigation">
        <%= render(:partial => 'layouts/navigation', :locals => {:subjects => @subjects}) %>
      </div>
      <div id="content">
        <!-- before yield -->
        <%= yield %>
        <!-- after yield -->
      </div> <!-- content -->
      <div class="clear"></div>
    </div> <!-- main -->
    <div id="footer">
      <p id="copyright">&copy; neo-dev.org / Neo Sepulveda</p>
    </div> <!-- footer --> 
  </body>
</html>
